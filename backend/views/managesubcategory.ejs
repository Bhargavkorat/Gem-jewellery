<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
        <title>Manage Subcategory</title>
</head>

<body>
    <%- include('./partials/navbar.ejs'); %>
        <%- include('./partials/sidebar.ejs'); %>
            <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
                <%if(message.length) { %>
                    <div class="alert alert-success" id="alert">
                        <%=message%>
                            <!-- <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"
                        aria-label="Close"></button> -->
                    </div>
                    <%}%>
                        <div class="row m-0">
                            <div class="col-12">
                                <div class="card my-4">
                                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                        <div class="shadow-primary border-radius-lg pt-4 pb-3"
                                            style="background-color: #ba9862;">
                                            <h3 class="text-white text-capitalize ps-3">Add New Subcategory</h3>
                                        </div>
                                    </div>
                                    <form action="/admin/addsubcategory" method="post">

                                        <div class="form-group   m-3 ps-4 col-8">
                                            <label for="inputState">Category</label>
                                            <select id="state" class="form-control" name="category">
                                                <% if(category.length) { %>
                                                    <% for(let C of category) { %>
                                                        <option>
                                                            <%= C.category %>
                                                        </option>
                                                        <% } %>
                                                            <% } %>
                                            </select>
                                        </div>
                                        <div class="m-3 ps-4 text-dark">
                                            <div class="mb-3 mt-3 col-8">
                                                <label for="resname" class=" pt-2 w-25">SubCategory</label>
                                                <input type="name" class="form-control " id="subcategory"
                                                    placeholder="Enter Subcategory Name" name="subcategory" required>
                                            </div>
                                            <button type="submit" class="btn btn-secondary "
                                                style="width: 100px;">Submit</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                        <div class="row m-0">
                            <div class="col-12">
                                <div class="card my-4">
                                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                        <div class="shadow-primary border-radius-lg pt-4 pb-3"
                                            style="background-color: #ba9862;">
                                            <h3 class="text-white text-capitalize ps-3">Display Subcategory</h3>
                                        </div>
                                    </div>

                                    <div class="p-5">
                                        <table class="table m-0 p-0 mt-4">
                                            <thead class="table text-white" style="background-color:#ba9862;">
                                                <tr>
                                                    <th class="text-center"> No</th>
                                                    <th class="text-center">Category</th>
                                                    <th class="text-center">Suvbcategory</th>
                                                    <th class="text-center">Delete</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(subcategory.length) { %>
                                                    <% for(let [I,S] of subcategory.entries()) { %>
                                                        <tr class="align-middle">
                                                            <td class="text-center">
                                                                <p>
                                                                    <%= I+1 %>
                                                                </p>
                                                            </td>
                                                            <td class="text-center">
                                                                <%= S.category%>
                                                            </td>
                                                            <td class="text-center">
                                                                <%= S.subcategory%>
                                                            </td>
                                                            <td class="">
                                                                <form action="/Managesubcategory/id" method="get">
                                                                    <a href="Managesubcategory/<%= S._id %>"
                                                                        class=" text-decoration-none text-black ">
                                                                        <i
                                                                            class=" material-icons opacity-10 d-flex ms-4 justify-content-center">delete</i>
                                                                    </a>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                            <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

            </main>
            <script>
                const message = `<%= message %>`
                if (message.length) {
                    setTimeout(() => {
                        var alertNode = document.querySelector('#alert')
                        alertNode.remove()
                    }, 3000);
                }
            </script>
            <%- include('./partials/script.ejs'); %>
</body>

</html>