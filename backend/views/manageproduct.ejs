<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
    <style>
        .overflowset {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            max-width: 120px;
        }
    </style>
        <title>ManageProduct</title>
</head>

<body>
    <%- include('./partials/navbar.ejs'); %>
        <%- include('./partials/sidebar.ejs'); %>
            <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
                <%if(message.length) { %>
                    <div class="alert alert-success" id="alert">
                        <%=message%>
                    </div>
                    <%}%>
                <div class="row m-0">
                    <div class="col-12">
                        <div class="card my-4">
                            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                <div class="shadow-primary border-radius-lg pt-4 pb-3" style="background-color: #ba9862;">
                                    <h3 class="text-white text-capitalize ps-3 ">Products Details</h3>
                                </div>
                            </div>
                            <div class="p-0">
                                <table class="table m-0 p-0 mt-4">
                                    <thead class="table text-white" style="background-color: #ba9862;">
                                        <tr>
                                            <th class="text-center">productname</th>
                                            <th class="text-center">category</th>
                                            <th class="text-center">subcategory</th>
                                            <th class="text-center">price</th>
                                            <th class="text-center">description</th>
                                            <th class="text-center">img</th>
                                            <th class="text-center">Delete</th>
                                        </tr>
                                    </thead>
                                    <% if(product.length) { %>
                                        <% for(let x of product) { %>
                                            <tr class="align-middle">
                                               
                                                <td class="text-center">
                                                    <%= x.productname%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.category%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.subcategory%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.price%>
                                                </td>
                                                <td class="text-center overflowset">
                                                    <%= x.description%>
                                                </td>
                                                <td class="text-center">
                                                    <img src="http://localhost:4000/<%= x.img%>" alt="Not Found"
                                                        style="width: 100px; height: 50px; margin: 5px auto;">
                                                </td>
                                                <td class="text-center">
                                                    <form action="/deleteproduct" method="get">
                                                        <a href="deleteproduct/<%= x._id %>"
                                                            class="text-decoration-none text-black">
                                                            <i
                                                                class=" material-icons opacity-10 d-flex justify-content-center">delete</i>
                                                        </a>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } %>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('./partials/script.ejs'); %>

</body>

</html>