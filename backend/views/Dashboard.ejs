<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
        <title>Dashboard</title>
</head>

<body class="g-sidenav-show  bg-gray-200">
    <%- include('./partials/navbar.ejs'); %>
        <%- include('./partials/sidebar.ejs'); %>
            <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">


                <div class="container-fluid py-4">
                    <div class="row">
                        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                            <div class="card">
                                <a href="../admin/manageuser" class="text-decoration-none">
                                    <div class="card-header p-3 pt-2">
                                        <div
                                            class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                                            <i class="material-icons opacity-10">person</i>
                                        </div>
                                        <div class="text-end pt-1" class="text-decoration-none">
                                            <h1 class="text-sm mb-0 text-capitalize">Total Users</h1>
                                            <h4 class="mb-0">
                                                <% if(user.length) { %>
                                                    <%= user.length %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                            </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>

                        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                            <div class="card">
                                <a href="../admin/ManageProduct" class="text-decoration-none">

                                    <div class="card-header p-3 pt-2">
                                        <div
                                            class="icon icon-lg icon-shape shadow-success text-center border-radius-xl mt-n4 position-absolute"  style="background-color: rgb(3, 88, 60);">
                                            <i class="material-icons opacity-10">payments</i>
                                        </div>
                                        <div class="text-end pt-1">
                                            <h1 class="text-sm mb-0 text-capitalize">Total Product</h1>
                                            <h4 class="mb-0">
                                                <% if(products.length) { %>
                                                    <%= products.length %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                            </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6">
                            <div class="card">
                                <a href="../admin/Managecategories" class="text-decoration-none">

                                    <div class="card-header p-3 pt-2">
                                        <div
                                            class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                                            <i class="material-icons opacity-10">category</i>
                                        </div>
                                        <div class="text-end pt-1">
                                            <h1 class="text-sm mb-0 text-capitalize">Total Category</h1>
                                            <h4 class="mb-0">
                                                <% if(Category.length) { %>
                                                    <%= Category.length %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                            </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6">
                            <div class="card">
                                <a href="../admin/Managecategories" class="text-decoration-none">

                                    <div class="card-header p-3 pt-2">
                                        <div
                                            class="icon icon-lg icon-shape shadow-info text-center border-radius-xl mt-n4 position-absolute"  style="background-color: rgb(109, 3, 82);">
                                            <i class="material-icons opacity-10">account_balance</i>
                                        </div>
                                        <div class="text-end pt-1">
                                            <h1 class="text-sm mb-0 text-capitalize">Total Subcategory</h1>
                                            <h4 class="mb-0 ">
                                                <% if(subcategory.length) { %>
                                                    <%= subcategory.length %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                            </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 mt-5 ">
                            <div class="card">
                                <a href="../admin/ManagePayment" class="text-decoration-none">

                                    <div class="card-header p-3 pt-2">
                                        <div class="icon icon-lg icon-shape  shadow-success text-center border-radius-xl mt-n4 position-absolute"
                                            style="background-color: brown;">
                                            <i class="material-icons opacity-10">account_balance</i>
                                        </div>
                                        <div class="text-end pt-1">
                                            <h1 class="text-sm mb-0 text-capitalize">Total Orders</p>
                                                <h4 class="mb-0">
                                                    <% if(orders.length) { %>
                                                        <%= orders.length %>
                                                            <% }else{ %>
                                                                <%= 0 %>
                                                                    <% } %>
                                                </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 mt-5 ">
                            <div class="card">
                                <a href="../admin/ManagePayment" class="text-decoration-none">

                                    <div class="card-header p-3 pt-2">
                                        <div class="icon icon-lg icon-shape  shadow-success text-center border-radius-xl mt-n4 position-absolute"
                                            style="background-color: rgb(114, 66, 3);">
                                            <i class="material-icons opacity-10">account_balance</i>
                                        </div>
                                        <div class="text-end pt-1">
                                            <h1 class="text-sm mb-0 text-capitalize">Total payments</p>
                                                <h4 class="mb-0">
                                                    <% if(totalCollections) { %>
                                                        <%= totalCollections %>
                                                            <% }else{ %>
                                                                <%= 0 %>
                                                                    <% } %>
                                                </h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </main>

            <%- include('./partials/script.ejs'); %>
</body>

</html>