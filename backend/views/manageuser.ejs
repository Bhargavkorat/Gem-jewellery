<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
    <style>
        .overflowset {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            max-width: 120px;
        }
    </style>
        <title>ManageUser</title>
</head>

<body>
    <%- include('./partials/navbar.ejs'); %>
        <%- include('./partials/sidebar.ejs'); %>
            <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

                <div class="row m-0">
                    <div class="col-12">
                        <div class="card my-4">
                            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                <div class="shadow-primary border-radius-lg pt-4 pb-3" style="background-color: #ba9862;">
                                    <h3 class="text-white text-capitalize ps-3 ">Users Details</h3>
                                </div>
                            </div>
                            <div class="p-0">
                                <table class="table m-0 p-0 mt-4">
                                    <thead class="table text-white" style="background-color: #ba9862;">
                                        <tr>
                                            <th class="text-center">firstname</th>
                                            <th class="text-center">lastname</th>
                                            <th class="text-center">email</th>
                                            <th class="text-center">moblie no</th>
                                            <th class="text-center">address</th>
                                            <th class="text-center">Pincode</th>
                                        </tr>
                                    </thead>
                                    <% if(data.length) { %>
                                        <% for(let x of data) { %>
                                            <tr class="align-middle">
                                                <td class="text-center">
                                                    <%= x.firstname%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.lastname%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.email%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.mobile%>
                                                </td>
                                                <td class="text-center overflowset">
                                                    <%= x.address%>
                                                </td>
                                                <td class="text-center">
                                                    <%= x.pincode%>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } %>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('./partials/script.ejs'); %>

</body>

</html>